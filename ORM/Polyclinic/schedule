from sqlalchemy import Column, Integer, ForeignKey
from sqlalchemy.orm import relationship
from base import Base

class Schedule(Base):
    __tablename__ = 'schedules'

    id = Column(Integer, primary_key=True, index=True)
    patient_id = Column(Integer, ForeignKey('patients.id'))
    doctor_id = Column(Integer, ForeignKey('doctors.id'))
    cabinet_id = Column(Integer, ForeignKey('cabinets.id'))
    date_id = Column(Integer, ForeignKey('dates.id'))
    time_id = Column(Integer, ForeignKey('times.id'))

    patient = relationship('Patient', back_populates='schedules')
    doctor = relationship('Doctor', back_populates='schedules')
    cabinet = relationship('Cabinet', back_populates='schedules')
    date = relationship('Date', back_populates='schedules')
    time = relationship('Time', back_populates='schedules')

    def __init__(self, patient_id: int, doctor_id: int, cabinet_id: int, date_id: int, time_id: int):
        self.patient_id = patient_id
        self.doctor_id = doctor_id
        self.cabinet_id = cabinet_id
        self.date_id = date_id
        self.time_id = time_id
